<div class="w-full h-screen flex max-h-screen">
  <!-- Side Navigation -->
  <nav class="w-1/6 bg-gray-800 text-white p-4">
    <%= render "shared/sidebar" %>
  </nav>

  <!-- Main Content -->
  <div class="flex-1 flex flex-col">
    <!-- Header -->
    <header class="bg-gray-100 p-4 flex justify-between items-center">
      <h1 class="text-xl font-bold">Dashboard</h1>
      <div class="flex items-center gap-4">
        <%= link_to 'Profile', edit_user_registration_path, class: "px-4 py-2 bg-gray-200 text-gray-800 rounded" %>
        <%= link_to 'Settings', edit_user_registration_path, class: "px-4 py-2 bg-gray-200 text-gray-800 rounded" %>
        <span class="text-gray-700 font-semibold"><%= current_user.email.split('@').first.capitalize %></span>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "px-4 py-2 bg-red-500 text-white rounded" %>
      </div>
    </header>

    <!-- Body -->
    <main class="flex-1 p-4">
      <h2 class="text-2xl font-semibold mb-4">Welcome to the Dashboard</h2>
      <p>Here is the body content of your dashboard.</p>
    </main>
  </div>
</div>
