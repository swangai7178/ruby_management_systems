<div class="w-full h-screen flex flex-col bg-gradient-to-r from-blue-500 to-indigo-600 text-white">
  <!-- Header -->
  <div class="w-full flex items-center justify-between px-8 py-4 bg-blue-600">
    <h1 class="text-2xl font-bold">POS System</h1>
    <div class="space-x-4">
      <%= link_to "Sign Up", new_user_registration_path, class: "px-4 py-2 bg-white text-blue-600 font-semibold rounded shadow hover:bg-gray-100 transition" %>
      <%= link_to "Sign In", new_user_session_path, class: "px-4 py-2 bg-transparent border border-white text-white font-semibold rounded hover:bg-white hover:text-blue-600 transition" %>
