      <div class="flex justify-center space-x-4">
        <%= link_to "Enter POS", new_user_session_path, class: "px-6 py-3 bg-white text-blue-600 font-semibold rounded shadow hover:bg-gray-100 transition" %>
        <%= link_to "Learn More", "#", class: "px-6 py-3 bg-transparent border border-white text-white font-semibold rounded hover:bg-white hover:text-blue-600 transition" %>
      </div>
    </div>
